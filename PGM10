/ program to find Kth smallest element

#include<iostream>
#include<algorithm>
using namespace std;
int main(){
    int arr[]={7, 10, 4, 3, 20, 15};
    int n=sizeof(arr)/sizeof(arr[0]);
    int num;
    sort(arr,arr+n);
    cout<<"which smallest element u want to find "<<endl;
    cin>>num;
    cout<<num<<" smallest element is "<<arr[num-1];
}
